{
  "name": "imf_get_dataflows",
  "implementation": "tools.impl.imf_tool_refactored.IMFGetDataflowsTool",
  "description": "Get available dataflows and indicators for a specific IMF database. Discover what indicators are available in databases like IFS or WEO.",
  "version": "1.0.0",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "database": {
        "type": "string",
        "description": "IMF database code",
        "enum": ["IFS", "DOT", "BOP", "GFSR", "FSI", "WEO", "GFSMAB", "CDIS", "CPIS", "WHDREO"],
        "default": "IFS"
      }
    },
    "required": ["database"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "database": {"type": "string"},
      "dataflows": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {"type": "string"},
            "name": {"type": "string"}
          }
        }
      },
      "count": {"type": "integer"}
    }
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Economic Data",
    "tags": ["imf", "dataflows", "indicators", "discovery"],
    "rateLimit": 60,
    "cacheTTL": 7200,
    "note": "Explore available indicators and dataflows within IMF databases.",
    "examples": [
      {
        "description": "Get IFS dataflows",
        "input": {
          "database": "IFS"
        }
      },
      {
        "description": "Get WEO dataflows",
        "input": {
          "database": "WEO"
        }
      }
    ],
    "useCases": [
      "Indicator discovery",
      "Understanding available data",
      "Research planning"
    ]
  }
}
