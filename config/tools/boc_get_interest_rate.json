{
  "name": "boc_get_interest_rate",
  "implementation": "sajha.tools.impl.bank_of_canada_tool_refactored.BoCGetInterestRateTool",
  "description": "Retrieve Bank of Canada interest rates including policy rate, overnight rate (CORRA), and prime rate with historical data.",
  "version": "2.9.8",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "rate_type": {
        "type": "string",
        "description": "Type of interest rate to retrieve",
        "enum": ["policy_rate", "overnight_rate", "prime_rate"],
        "default": "policy_rate"
      },
      "start_date": {
        "type": "string",
        "description": "Start date in YYYY-MM-DD format"
      },
      "end_date": {
        "type": "string",
        "description": "End date in YYYY-MM-DD format"
      },
      "recent_periods": {
        "type": "integer",
        "description": "Number of recent observations (1-100)",
        "minimum": 1,
        "maximum": 100,
        "default": 10
      }
    },
    "required": ["rate_type"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "series_name": {
        "type": "string",
        "description": "Interest rate series identifier"
      },
      "label": {
        "type": "string",
        "description": "Interest rate name"
      },
      "description": {
        "type": "string",
        "description": "Description of the interest rate"
      },
      "dimension": {
        "type": "object",
        "description": "Rate units and frequency (typically percentage, daily/monthly)"
      },
      "observation_count": {
        "type": "integer",
        "description": "Number of rate observations"
      },
      "observations": {
        "type": "array",
        "description": "Historical interest rate values",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "description": "Effective date of the rate"
            },
            "value": {
              "type": ["number", "null"],
              "description": "Interest rate percentage"
            }
          }
        }
      }
    }
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Economic Data",
    "tags": ["interest rates", "monetary policy", "bank of canada", "canada", "CORRA"],
    "rateLimit": 120,
    "cacheTTL": 3600,
    "examples": [
      {
        "description": "Get current policy rate",
        "input": {
          "rate_type": "policy_rate",
          "recent_periods": 1
        }
      },
      {
        "description": "Get overnight rate history",
        "input": {
          "rate_type": "overnight_rate",
          "start_date": "2024-01-01",
          "end_date": "2024-10-31"
        }
      }
    ]
  }
}
