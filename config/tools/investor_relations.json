{
  "name": "investor_relations",
  "implementation": "tools.impl.enhanced_investor_relations_tool.EnhancedInvestorRelationsTool",
  "description": "Find investor relations documents and links for public companies including annual reports, earnings presentations, and management reports. Currently supports: TSLA, MSFT, C, BMO, RY, JPM, GS",
  "version": "1.0.0",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "description": "Action to perform",
        "enum": [
          "find_ir_page",
          "get_documents",
          "get_latest_earnings",
          "get_annual_reports",
          "get_presentations",
          "get_all_resources",
          "list_supported_companies"
        ]
      },
      "ticker": {
        "type": "string",
        "description": "Stock ticker symbol (e.g., TSLA, MSFT, JPM). Required for all actions except list_supported_companies"
      },
      "document_type": {
        "type": "string",
        "description": "Type of document to search for (optional)",
        "enum": [
          "annual_report",
          "quarterly_report",
          "earnings_presentation",
          "investor_presentation",
          "proxy_statement",
          "press_release",
          "esg_report",
          "all"
        ]
      },
      "year": {
        "type": "integer",
        "description": "Year for documents (e.g., 2024, 2023) (optional)",
        "minimum": 2000,
        "maximum": 2030
      },
      "limit": {
        "type": "integer",
        "description": "Maximum number of documents to return",
        "default": 10,
        "minimum": 1,
        "maximum": 50
      }
    },
    "required": ["action"]
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Financial Analysis",
    "tags": ["investor relations", "financial reports", "earnings", "annual reports", "IR documents"],
    "rateLimit": 30,
    "cacheTTL": 3600,
    "supported_companies": [
      "TSLA - Tesla Inc.",
      "MSFT - Microsoft Corporation",
      "C - Citigroup Inc.",
      "BMO - Bank of Montreal",
      "RY - Royal Bank of Canada",
      "JPM - JPMorgan Chase & Co.",
      "GS - Goldman Sachs Group Inc."
    ],
    "examples": [
      {
        "description": "List all supported companies",
        "action": "list_supported_companies"
      },
      {
        "description": "Find Tesla's IR page",
        "action": "find_ir_page",
        "ticker": "TSLA"
      },
      {
        "description": "Get latest earnings for Microsoft",
        "action": "get_latest_earnings",
        "ticker": "MSFT"
      },
      {
        "description": "Get JPMorgan's annual reports",
        "action": "get_annual_reports",
        "ticker": "JPM",
        "limit": 5
      },
      {
        "description": "Get Goldman Sachs presentations",
        "action": "get_presentations",
        "ticker": "GS",
        "limit": 10
      },
      {
        "description": "Get all Citigroup IR resources",
        "action": "get_all_resources",
        "ticker": "C"
      },
      {
        "description": "Get Tesla's annual reports from 2024",
        "action": "get_documents",
        "ticker": "TSLA",
        "document_type": "annual_report",
        "year": 2024
      }
    ]
  }
}
