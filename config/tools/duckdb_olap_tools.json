{
  "name": "duckdb_olap_tools",
  "implementation": "tools.impl.duckdb_olap_tools_tool.DuckDbOlapToolsTool",
  "description": "DuckDB OLAP analytics for CSV, Parquet, and JSON files",
  "version": "1.0.0",
  "enabled": true,
  "data_directory": "data/duckdb",
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "description": "Action to perform",
        "enum": [
          "list_tables",
          "describe_table",
          "query",
          "refresh_views",
          "get_stats",
          "aggregate",
          "list_files"
        ]
      },
      "table_name": {
        "type": "string",
        "description": "Name of table/view"
      },
      "sql_query": {
        "type": "string",
        "description": "SQL query to execute"
      },
      "columns": {
        "type": "array",
        "description": "Columns for aggregation",
        "items": {"type": "string"}
      },
      "group_by": {
        "type": "array",
        "description": "Columns to group by",
        "items": {"type": "string"}
      },
      "aggregations": {
        "type": "object",
        "description": "Aggregation functions (e.g., {'col': 'sum'})"
      },
      "limit": {
        "type": "integer",
        "description": "Limit number of results",
        "default": 100,
        "minimum": 1,
        "maximum": 10000
      }
    },
    "required": ["action"]
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Data Analytics",
    "tags": ["duckdb", "olap", "analytics", "sql", "data"],
    "rateLimit": 60,
    "cacheTTL": 60,
    "note": "Requires DuckDB library: pip install duckdb"
  }
}
