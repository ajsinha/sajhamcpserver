{
  "name": "imf_get_bop_data",
  "implementation": "sajha.tools.impl.imf_tool_refactored.IMFGetBOPDataTool",
  "description": "Retrieve Balance of Payments (BOP) data including current account, capital account, trade balance, and financial flows.",
  "version": "2.2.0",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "country_code": {
        "type": "string",
        "description": "ISO 2-letter country code"
      },
      "indicator_code": {
        "type": "string",
        "description": "BOP indicator code"
      },
      "start_year": {
        "type": "integer",
        "minimum": 1950,
        "maximum": 2030
      },
      "end_year": {
        "type": "integer",
        "minimum": 1950,
        "maximum": 2030
      },
      "frequency": {
        "type": "string",
        "enum": ["A", "Q"],
        "default": "A"
      }
    },
    "required": ["country_code", "indicator_code"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "database": {"type": "string"},
      "country_code": {"type": "string"},
      "indicator_code": {"type": "string"},
      "frequency": {"type": "string"},
      "data": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "period": {"type": "string"},
            "value": {"type": ["number", "null"]}
          }
        }
      },
      "count": {"type": "integer"}
    }
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Economic Data",
    "tags": ["imf", "bop", "balance of payments", "trade", "current account"],
    "rateLimit": 120,
    "cacheTTL": 3600,
    "note": "Balance of Payments data provides comprehensive information on international transactions.",
    "examples": [
      {
        "description": "Get US current account balance",
        "input": {
          "country_code": "US",
          "indicator_code": "BCA_BP6_USD",
          "start_year": 2020
        }
      }
    ],
    "useCases": [
      "Trade balance analysis",
      "Current account monitoring",
      "Capital flow tracking",
      "External sector analysis"
    ]
  }
}
