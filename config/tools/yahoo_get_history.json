{
  "name": "yahoo_get_history",
  "implementation": "tools.impl.yahoo_finance_tool.YahooGetHistoryTool",
  "description": "Retrieve historical price and volume data for a stock over a specified time period with configurable intervals.",
  "version": "1.0.0",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "symbol": {
        "type": "string",
        "description": "Stock ticker symbol (e.g., AAPL, GOOGL, MSFT)",
        "pattern": "^[A-Z^.]{1,10}$"
      },
      "period": {
        "type": "string",
        "description": "Time period for historical data",
        "enum": ["1d", "5d", "1mo", "3mo", "6mo", "1y", "2y", "5y", "10y", "ytd", "max"],
        "default": "1mo"
      },
      "interval": {
        "type": "string",
        "description": "Data interval/granularity",
        "enum": ["1m", "2m", "5m", "15m", "30m", "60m", "90m", "1h", "1d", "5d", "1wk", "1mo", "3mo"],
        "default": "1d"
      },
      "include_events": {
        "type": "boolean",
        "description": "Include dividend and split events",
        "default": true
      }
    },
    "required": ["symbol"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "symbol": {
        "type": "string",
        "description": "Stock ticker symbol"
      },
      "period": {
        "type": "string",
        "description": "Time period requested"
      },
      "interval": {
        "type": "string",
        "description": "Data interval used"
      },
      "data_points": {
        "type": "integer",
        "description": "Number of historical data points returned"
      },
      "history": {
        "type": "array",
        "description": "Historical price and volume data",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "description": "Date or datetime (ISO format)"
            },
            "open": {
              "type": ["number", "null"],
              "description": "Opening price"
            },
            "high": {
              "type": ["number", "null"],
              "description": "High price"
            },
            "low": {
              "type": ["number", "null"],
              "description": "Low price"
            },
            "close": {
              "type": ["number", "null"],
              "description": "Closing price"
            },
            "volume": {
              "type": ["integer", "null"],
              "description": "Trading volume"
            },
            "adjusted_close": {
              "type": ["number", "null"],
              "description": "Adjusted closing price (accounts for splits/dividends)"
            }
          },
          "required": ["date", "close"]
        }
      },
      "dividends": {
        "type": "array",
        "description": "Dividend events during the period",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "description": "Dividend date"
            },
            "amount": {
              "type": "number",
              "description": "Dividend amount"
            }
          }
        }
      },
      "splits": {
        "type": "array",
        "description": "Stock split events during the period",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "description": "Split date"
            },
            "ratio": {
              "type": "string",
              "description": "Split ratio (e.g., '2:1', '3:1')"
            }
          }
        }
      },
      "currency": {
        "type": "string",
        "description": "Currency of prices"
      },
      "last_updated": {
        "type": "string",
        "description": "Timestamp when data was retrieved (ISO format)"
      }
    },
    "required": ["symbol", "history"]
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Financial Data",
    "tags": ["finance", "stocks", "historical", "prices", "OHLCV", "backtesting"],
    "rateLimit": 60,
    "cacheTTL": 300,
    "note": "Historical OHLCV (Open, High, Low, Close, Volume) data from Yahoo Finance. Supports multiple time periods and intervals for technical analysis.",
    "examples": [
      {
        "description": "Get 1 year of daily Apple stock data",
        "input": {
          "symbol": "AAPL",
          "period": "1y",
          "interval": "1d"
        }
      },
      {
        "description": "Get 1 month of hourly Tesla data",
        "input": {
          "symbol": "TSLA",
          "period": "1mo",
          "interval": "1h"
        }
      },
      {
        "description": "Get intraday 5-minute data for today",
        "input": {
          "symbol": "GOOGL",
          "period": "1d",
          "interval": "5m"
        }
      }
    ],
    "useCases": [
      "Technical analysis",
      "Backtesting trading strategies",
      "Chart generation",
      "Trend analysis",
      "Performance tracking",
      "Dividend analysis"
    ]
  }
}
