{
  "name": "msdoc_read_excel",
  "implementation": "tools.impl.msdoc_tools_tool_refactored.MsDocReadExcelTool",
  "description": "Read and extract data from Excel spreadsheets with optional sheet selection",
  "version": "1.0.0",
  "enabled": true,
  "inputSchema": {
    "type": "object",
    "properties": {
      "filename": {
        "type": "string",
        "description": "Name of the Excel file to read (.xlsx)"
      },
      "sheet_name": {
        "type": "string",
        "description": "Name of the sheet to read (optional)"
      },
      "sheet_index": {
        "type": "integer",
        "description": "Index of the sheet to read, 0-based (optional)",
        "minimum": 0
      },
      "max_rows": {
        "type": "integer",
        "description": "Maximum number of rows to return",
        "default": 100,
        "minimum": 1,
        "maximum": 10000
      },
      "include_formulas": {
        "type": "boolean",
        "description": "Include cell formulas in the output",
        "default": false
      }
    },
    "required": ["filename"]
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "filename": {"type": "string"},
      "sheet_name": {"type": "string"},
      "data": {
        "type": "array",
        "description": "Spreadsheet data as 2D array",
        "items": {"type": "array"}
      },
      "row_count": {"type": "integer"},
      "column_count": {"type": "integer"},
      "formulas": {
        "type": "array",
        "description": "Cell formulas (if include_formulas is true)",
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cell": {"type": "string"},
              "formula": {"type": "string"}
            }
          }
        }
      }
    }
  },
  "metadata": {
    "author": "Ashutosh Sinha",
    "category": "Document Processing",
    "tags": ["excel", "xlsx", "read", "spreadsheet", "data"],
    "rateLimit": 60,
    "cacheTTL": 300,
    "note": "Requires openpyxl library",
    "examples": [
      {
        "description": "Read first sheet of Excel file",
        "input": {"filename": "data.xlsx"}
      },
      {
        "description": "Read specific sheet by name",
        "input": {
          "filename": "report.xlsx",
          "sheet_name": "Q4 Results"
        }
      },
      {
        "description": "Read with formulas",
        "input": {
          "filename": "calculations.xlsx",
          "include_formulas": true
        }
      }
    ],
    "useCases": [
      "Extract data from Excel files",
      "Read specific worksheets",
      "Analyze spreadsheet formulas"
    ]
  }
}
